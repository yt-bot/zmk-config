#define HRC_REPEAT_MAC &hml_repeat  LS(LGUI) 0
#define HRC_LPAR_MAC  &hmr_lpar_lt RS(LGUI) 0

/* Horizontal combos - left hand */
ZMK_COMBO(esc,   &kp ESC,       LT3 LT2,     DEF EN_MAC NAV NUM, COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(ret,   &kp RETURN,    LT2 LT1,     DEF SV EN_MAC SV_MAC NAV NUM, COMBO_TERM_FAST, COMBO_IDLE_FAST)
