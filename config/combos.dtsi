ZMK_COMBO(lbrc,       &kp LBRC,                     RB1 RB2,      NAV NAV_MAC,                                          COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(rbrc,       &kp RBRC,                     RB2 RB3,      NAV NAV_MAC,                                          COMBO_TERM_FAST, COMBO_IDLE_FAST)

