/*                KEY POSITIONS

  ╭─────────────────────╮ ╭─────────────────────╮
  │ LT4 LT3 LT2 LT1 LT0 │ │ RT0 RT1 RT2 RT3 RT4 │
  │ LM4 LM3 LM2 LM1 LM0 │ │ RM0 RM1 RM2 RM3 RM4 │
  │ LB4 LB3 LB2 LB1 LB0 │ │ RB0 RB1 RB2 RB3 RB4 │
  ╰───────╮ LH2 LH1 LH0 │ │ RH0 RH1 RH2 ╭───────╯
          ╰─────────────╯ ╰─────────────╯ */

#define COMBO_TERM_FAST 18
#define COMBO_TERM_SLOW 30

#define COMBO_IDLE_FAST 150
#define COMBO_IDLE_SLOW 50

// make homerow combos tap-only (so HRMs can be chorded instantaneously)
#define HRC_TAB         &hml                  LS(LALT)  TAB
#define HRC_REPEAT      &hml_repeat           LS(LCTRL) 0
#define HRC_LPAR        &hmr_lpar_lt          RS(LCTRL) 0
#define HRC_RPAR        &hmr_rpar_gt          RS(LALT)  0

// Mac variants
#define HRC_REPEAT_MAC  &hml_repeat           LS(LGUI)  0
#define HRC_LPAR_MAC    &hmr_lpar_lt          RS(LGUI)  0

// Layer combos
ZMK_COMBO(grk,          &sl UC,                     RT1 RT3,      DEF SV EN_MAC SV_MAC NAV NAV_MAC NUM NUM_MAC TYPING,  COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(cpgrk,        &sls 0,                     RT1 RT2 RT3,  DEF SV EN_MAC SV_MAC NAV NAV_MAC NUM NUM_MAC TYPING,  COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(ssys,         &mo SYS,                    RT3 RT4,      DEF SV EN_MAC SV_MAC NAV NAV_MAC NUM NUM_MAC TYPING,  COMBO_TERM_FAST, COMBO_IDLE_FAST)

/* Horizontal combos - left hand */
ZMK_COMBO(esc,        &kp ESC,                      LT3 LT2,      DEF SV EN_MAC SV_MAC NAV NAV_MAC NUM NUM_MAC TYPING,  COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(ret,        &kp RETURN,                   LT2 LT1,      DEF SV EN_MAC SV_MAC NAV NAV_MAC NUM NUM_MAC TYPING,  COMBO_TERM_FAST, COMBO_IDLE_FAST)

ZMK_COMBO(tab,        HRC_TAB,                      LM3 LM2,      DEF SV EN_MAC SV_MAC NAV NAV_MAC NUM NUM_MAC TYPING,  COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(repeat,     HRC_REPEAT,                   LM2 LM1,      DEF SV EN_MAC SV_MAC NAV NAV_MAC NUM NUM_MAC TYPING,  COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(repeat_mac, HRC_REPEAT_MAC,               LM2 LM1,      DEF SV EN_MAC SV_MAC NAV NAV_MAC NUM NUM_MAC TYPING,  COMBO_TERM_FAST, COMBO_IDLE_FAST)

ZMK_COMBO(cut,        &kp LC(X),                    LB3 LB1,      DEF SV NAV NUM NUM_MAC,                               COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(copy,       &kp LC(C),                    LB3 LB2,      DEF SV NAV NUM NUM_MAC,                               COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(cut_mac,    &kp LG(X),                    LB3 LB1,      EN_MAC SV_MAC NAV_MAC,                                COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(copy_mac,   &kp LG(V),                    LB3 LB2,      EN_MAC SV_MAC NAV_MAC,                                COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(paste,      &kp LC(V),                    LB2 LB1,      DEF SV NAV NUM,                                       COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(paste_mac,  &kp LG(V),                    LB2 LB1,      EN_MAC SV_MAC NAV_MAC NUM_MAC,                        COMBO_TERM_FAST, COMBO_IDLE_FAST)


/* Horizontal combos - right hand */
ZMK_COMBO(bspc,       &kp BSPC,                     RT1 RT2,      DEF SV EN_MAC SV_MAC NAV NAV_MAC NUM NUM_MAC TYPING,  COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(del,        &kp DEL,                      RT2 RT3,      DEF SV EN_MAC SV_MAC NAV NAV_MAC NUM NUM_MAC TYPING,  COMBO_TERM_FAST, COMBO_IDLE_FAST)

ZMK_COMBO(lpar,       HRC_LPAR,                     RM1 RM2,      DEF SV NUM TYPING,                                    COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(lpar_mac,   HRC_LPAR_MAC,                 RM1 RM2,      EN_MAC SV_MAC NUM_MAC,                                COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(rpar,       HRC_RPAR,                     RM2 RM3,      DEF SV EN_MAC SV_MAC NUM NUM_MAC TYPING,              COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(lt,         &kp LT,                       RM1 RM2,      NAV NAV_MAC,                                          COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(gt,         &kp GT,                       RM2 RM3,      NAV NAV_MAC,                                          COMBO_TERM_FAST, COMBO_IDLE_FAST)

ZMK_COMBO(lbkt,       &kp LBKT,                     RB1 RB2,      DEF SV EN_MAC SV_MAC NUM NUM_MAC TYPING,              COMBO_TERM_FAST, COMBO_IDLE_FAST)
