ZMK_COMBO(hash,       &kp HASH,                     LT2 LM2,      DEF SV EN_MAC SV_MAC NAV NAV_MAC NUM NUM_MAC TYPING,  COMBO_TERM_SLOW, COMBO_IDLE_SLOW)
ZMK_COMBO(dllr,       &kp DLLR,                     LT1 LM1,      DEF SV EN_MAC SV_MAC NAV NAV_MAC NUM NUM_MAC TYPING,  COMBO_TERM_SLOW, COMBO_IDLE_SLOW)
ZMK_COMBO(prcnt,      &kp PRCNT,                    LT0 LM0,      DEF SV EN_MAC SV_MAC NAV NAV_MAC NUM NUM_MAC TYPING,  COMBO_TERM_SLOW, COMBO_IDLE_SLOW)

ZMK_COMBO(grave,      &kp GRAVE,                    LM3 LB3,      DEF SV EN_MAC SV_MAC NAV NAV_MAC NUM NUM_MAC TYPING,  COMBO_TERM_SLOW, COMBO_IDLE_SLOW)
ZMK_COMBO(bslh,       &kp BSLH,                     LM2 LB2,      DEF SV EN_MAC SV_MAC NAV NAV_MAC NUM NUM_MAC TYPING,  COMBO_TERM_SLOW, COMBO_IDLE_SLOW)
ZMK_COMBO(equal,      &kp EQUAL,                    LM1 LB1,      DEF SV EN_MAC SV_MAC NAV NAV_MAC NUM_MAC NUM TYPING,  COMBO_TERM_SLOW, COMBO_IDLE_SLOW)
ZMK_COMBO(tilde,      &kp TILDE,                    LM0 LB0,      DEF SV EN_MAC SV_MAC NAV NAV_MAC NUM NUM_MAC TYPING,  COMBO_TERM_SLOW, COMBO_IDLE_SLOW)

/* Vertical combos - right hand */
